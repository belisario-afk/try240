{
  "name": "try240",
  "version": "0.1.0",
  "private": true,
  "description": "Spotify-driven audio-reactive visualizer with robust analysis and VJ tools. Vite + TypeScript + Three.js + Tailwind. Deploys to GitHub Pages.",
  "author": "belisario-afk",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --host",
    "lint": "eslint . --ext .ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "pretest:e2e": "pnpm build && pnpm exec playwright install",
    "test:e2e": "playwright test",
    "prepare": "husky install",
    "deploy": "vite build && echo 'Build complete. Deployment handled by GitHub Actions (gh-pages) on push to main.'",
    "analyze": "vite build && node ./scripts/print-bundle-stats.cjs"
  },
  "dependencies": {
    "@sentry/browser": "^8.31.0",
    "idb": "^8.0.0",
    "localforage": "^1.10.0",
    "preact": "^10.24.3",
    "three": "^0.160.0",
    "three-stdlib": "^2.30.4",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@preact/preset-vite": "^2.8.2",
    "@types/node": "^22.7.4",
    "@types/three": "^0.160.0",
    "@types/web": "^0.0.166",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glslify": "^7.1.1",
    "husky": "^9.1.6",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-glsl": "^1.3.0",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}